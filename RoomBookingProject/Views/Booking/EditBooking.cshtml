@model RoomBookingProject.Models.Booking
@{
    ViewData["Title"] = "Edit Booking";
    ViewData["AdminPanel"] = "active";
}

<!-- Breadcrumb Section Begin -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <h2>Edit Booking</h2>
                    <div class="bt-option">
                        <a class="text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        <span>Edit Booking</span>
                        </br>
                        </br>
                    </div>
                </div>
            </div>
        </div>
        <!-- Breadcrumb Section End -->

        <div class="col-md-4 offset-md-4">
            </br>
            @if (TempData["Message"] != null)
            {
                <div class="alert @((TempData["IsError"] != null && (bool)TempData["IsError"]) ? "alert-danger" : "alert-success")" role="alert">
                    @TempData["Message"]
                </div>
            }
            </br>
<form asp-action="EditBooking" method="post">
  <input type="hidden" asp-for="BookingId" />
  <div class="form-group">
  <strong><label asp-for="RoomId"></label></strong>
</br>
<select asp-for="RoomId" id="roomid" class="select-option full-width" asp-items="@ViewBag.Rooms"></select>

<span asp-validation-for="RoomId" class="text-danger"></span>
</div>

<div class="form-group">
    </br>
<input type="hidden" asp-for="CustomerId" class="form-control" />
<span asp-validation-for="CustomerId" class="text-danger"></span>
</div>

<div class="form-group">
<strong><label asp-for="CheckInDate"></label></strong>
<input asp-for="CheckInDate" class="form-control" />
<span asp-validation-for="CheckInDate" class="text-danger"></span>
</div>

<div class="form-group">
<strong><label asp-for="CheckOutDate"></label></strong>
<input asp-for="CheckOutDate" class="form-control" />
<span asp-validation-for="CheckOutDate" class="text-danger"></span>
</div>

<div class="form-group">
<strong><label asp-for="Status"></label></strong>
<input asp-for="Status" class="form-control" />
<span asp-validation-for="Status" class="text-danger"></span>
</div>

<div class="text-center">
<button type="submit" class="btn btn-primary">Save</button>
<a asp-action="ViewBooking" class="btn btn-secondary">Back to List</a>
</div>
</form>
</div>
