@using System.Security.Claims
@{
    var userEmailClaim = Context.User.FindFirst("Email");
    var userEmail = userEmailClaim != null ? userEmailClaim.Value : "Unknown";
}

<!-- Offcanvas Menu Section Begin -->
<div class="offcanvas-menu-overlay"></div>
<div class="canvas-open">
    <strong><i class="icon_menu"></i></strong>
</div>
<div class="offcanvas-menu-wrapper">
    <div class="canvas-close">
        <strong><i class="icon_close"></i></strong>
    </div>

    <div class="header-configure-area">
        <a asp-controller="Home" asp-action="Room" class="bk-btn">Booking Now</a>
    </div>
    <nav class="mainmenu mobile-menu">
        <ul>
            @if (User.Identity.IsAuthenticated)
            {

                <li class="@ViewData["Index"]"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
