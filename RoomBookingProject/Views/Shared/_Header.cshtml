                </li>
                <li class="@ViewData["About"]"><a class="text-dark" asp-controller="Home" asp-action="About">About Us</a></li>
                <li class="@ViewData["Room"]"><a class="text-dark" asp-controller="Home" asp-action="RoomInfo">Rooms</a></li>
                <li class="@ViewData["Contact"]"><a class="text-dark" asp-controller="Home" asp-action="Contact">Contact Us</a></li>
