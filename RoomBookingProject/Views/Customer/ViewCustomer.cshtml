@model List<RoomBookingProject.Models.Customer>

@{
    ViewData["Title"] = "Customers";
    ViewData["AdminPanel"] = "active"; 
}

<!-- Breadcrumb Section Begin -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <h2>Customers List</h2>
                    <div class="bt-option">
                        <a class="text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        <span>Customers List</span>
                    </div>
                    </br>

                    <a href="@Url.Action("CreateCustomer", "Customer")" class="btn btn-primary">Create Customer</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Section End -->

<div class="container">
    <div class="row">

        <form asp-controller="Customer" asp-action="Search" method="get" class="form-inline">
            <div class="form-group mr-2">             
                <input type="text" class="form-control" id="userEmail" name="email" placeholder="Search by email">
            </div>
            <div class="form-group mr-2">              
                <input type="text" class="form-control" id="userName" name="name" placeholder="Search by name">
            </div>
            <button type="submit" class="btn btn-primary">Search</button>
            </br>
            </br>
            </br>
        </form>

       
        <div class="col">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th class="theader">Id</th>
                            <th class="theader">Name</th>
                            <th class="theader">User Id</th>
                            <th class="theader">Phone</th>
                            <th class="theader">Actions</th>
                        </tr>
                    </thead>
                        <tbody>
                        @foreach (var customer in Model)
                        {                           
                            <tr>
                                <td class="theader">@customer.CustomerId</td>
                                <td class="theader">@customer.Name</td>
                                <td class="theader">@customer.User.Email</td>
                                <td class="theader">@customer.Phone</td>
                                <td class="theader">
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("EditCustomer", "Customer", new { id = customer.CustomerId })" class="btn btn-secondary">Edit</a>
                                    </div>

                                    <div class="btn-group" role="group">
                                        <form asp-controller="Customer" asp-action="Delete" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@customer.CustomerId" />
                                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this customer?')">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                        </tbody>

                </table>
            </div>
        </div>
    </div>
</div>

