@model List<RoomBookingProject.Models.Blog>

@{
    ViewData["Title"] = "Blog list";
    ViewData["AdminPanel"] = "active";
}

<!-- Breadcrumb Section Begin -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <h2>Blogs List</h2>
                    <div class="bt-option">
                        <a class="text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        <span>Blogs List</span>
                    </div>
                    </br>
                    <a href="@Url.Action("CreateBlog", "Blog")" class="btn btn-primary">Create Blog</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Section End -->

<div class="container">
    <div class="row">
        <div class="col">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th class="theader">Image</th>
                            <th></th>
                            <th class="theader">Blog Description</th>
                            <th class="theader">Event Date</th>
                            <th class="theader">Actions</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var blog in Model)
                        {
                            <tr>
                                <td colspan="2">

                                    <img src="/img/blog/@blog.Img" class="img-fluid d-none d-sm-inline" alt="Room Image" width="250" height="150">

                                    <img src="/img/blog/@blog.Img" class="img-fluid d-inline d-sm-none" alt="Room Image" style="width: 180px; height: 60px;">

                                </td>
                                <td>@blog.Description</td>
                                <td>@blog.CreateDate</td>

                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("EditBlog", "Blog", new { id = blog.BlogId })" class="btn btn-secondary">Edit</a>
                                    </div>
                                    <div class="btn-group" role="group">
                                        <form asp-controller="Blog" asp-action="Delete" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@blog.BlogId" />
                                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this blog?')">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
