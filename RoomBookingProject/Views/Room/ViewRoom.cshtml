@model List<RoomBookingProject.Models.Room>

@{
    ViewData["Title"] = "Rooms List";
     ViewData["AdminPanel"] = "active";
}

<!-- Breadcrumb Section Begin -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <h2>Rooms List</h2>
                    <div class="bt-option">
                        <a class="text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        <span>Rooms List</span>
                    </div>
                    </br>
                    
                    <a href="@Url.Action("CreateRoom", "Room")" class="btn btn-primary">Create Room</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Section End -->

<div class="container">
    <div class="row">
        <div class="col">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th class="theader">Image</th>
                            <th></th>
                            <th class="theader">RoomType</thc>
                            <th class="theader">Capacity</th>
                            <th class="theader">PricePerNight/USD</th>
                            <th class="theader">Description</th>
                            <th class="theader">Actions</th>
                   
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var room in Model)
                        {
                            <tr>
                                <td colspan="2" class="theader">

                                    <img src="/img/room/@room.Img" class="img-fluid d-none d-sm-inline" alt="Room Image" width="250" height="150">

                                    <img src="/img/room/@room.Img" class="img-fluid d-inline d-sm-none" alt="Room Image" style="width: 180px; height: 60px;">

                                </td>
                                <td class="theader">@room.RoomType</td>
                                <td class="theader">@room.Capacity</td>
                                <td class="theader">@room.PricePerNight</td>
                                <td class="theader">@room.Description</td>

                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("EditRoom", "Room", new { id = room.RoomId })" class="btn btn-secondary">Edit</a>
                                    </div>
                                    <div class="btn-group" role="group">
                                        <form asp-controller="Room" asp-action="Delete" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@room.RoomId" />
                                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this room?')">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
