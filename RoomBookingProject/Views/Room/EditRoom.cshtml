@model RoomBookingProject.Models.Room
@{
    ViewData["Title"] = "Edit Room";
    ViewData["AdminPanel"] = "active";
}

<body class="page-background">
<!-- Breadcrumb Section Begin -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <h2>Edit Room</h2>
                    <div class="bt-option">
                        <a class="text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        <span>Edit Room</span>
                        </br>
                        </br>
                    </div>
                </div>
            </div>
        </div>
<!-- Breadcrumb Section End -->

        <div class="col-md-6 offset-md-3">
<form asp-action="EditRoom" method="post">
    <input type="hidden" asp-for="RoomId" />
    <div class="form-group">
        <strong><label asp-for="RoomType"></label></strong>
        <input asp-for="RoomType" class="form-control" />
        <span asp-validation-for="RoomType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <strong><label asp-for="Capacity"></label></strong>
        <input asp-for="Capacity" class="form-control" />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <strong><label asp-for="PricePerNight">PricePerNight/USD</label></strong>
        <input asp-for="PricePerNight" class="form-control" />
        <span asp-validation-for="PricePerNight" class="text-danger"></span>
    </div>
    <div class="form-group">
        <strong><label asp-for="Img"></label></strong>
        <input asp-for="Img" class="form-control" />
        <span asp-validation-for="Img" class="text-danger"></span>
    </div>
    <div class="form-group">
        <strong><label asp-for="Description"></label></strong>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="text-center">
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="ViewRoom" class="btn btn-secondary">Back to List</a>
    </div>
</form>
</div>
</div>
</div>
</body>